$cardBackground = $UI.colors.white

.root
  height 27u
  background-color $cardBackground
  radius()
  flex-basis 38u
  overflow hidden
  flex-grow 1

  +tablet()
    flex-grow 0

.header
  height 5u
  padding 0 2u

.headerText
  font(s)

.content
  margin-top 2u
  padding 0 2u
  flex-grow 1

.levelName
.name
  font(xl)

.name
  margin-top 1u

.description
  margin-top 2u

.footer
  margin-top 1u
  padding 0 2u 2u 2u
  z-index 99


